package com.avviare.sarthi.service;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.avviare.sarthi.dto.Login;
import com.avviare.sarthi.repository.LoginRepository;
@Service
public class LoginService {

    @Autowired
    private LoginRepository userRepository; // Make sure this repository exists

    public boolean authenticateUser(String email, String password) {
        System.out.println("Authenticating user with email: " + email);

        Optional<Login> user = userRepository.findByEmail(email);
        System.out.println("user "+user.get());

        if (user.isPresent()) {
            Login loginUser = user.get();
            System.out.println("User found: " + loginUser.getEmail());
            System.out.println("Stored password: " + loginUser.getPassword());
            System.out.println("Entered password: " + password);

            if (loginUser.getPassword().equals(password)) {
                System.out.println("Password matched!");
                return true;
            } else {
                System.out.println("Password did NOT match!");
            }
        } else {
            System.out.println("User NOT found in database!");
        }

        return false;
    }

}
