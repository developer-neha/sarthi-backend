package com.avviare.sarthi.repository;

import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.avviare.sarthi.dto.Login;
import com.avviare.sarthi.dto.Register;

@Repository
public interface LoginRepository extends JpaRepository<Login, Integer> {
//    Optional<Login> findByEmail(String email);
    Optional<Login> findByEmailIgnoreCase(String email);
    
    @Query("SELECT u FROM User u WHERE u.email = :email")
    Optional<Register> findByEmail(@Param("email") String email);


}

